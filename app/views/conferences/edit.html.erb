<header>
  <h2>List your conference</h2>
</header>

<%= form_for(@conference, url: conference_path(@conference), method: "patch") do |f| %>
  <section class="inputs">
    <fieldset>
      <%= f.label :name, "Conference name" %>
      <%= f.text_field :name %>

      <%= f.label :website_url, "Website" %>
      <%= f.url_field :website_url %>

      <%= f.label :cfp_deadline, "CFP deadline" %>
      <%= f.date_field :cfp_deadline %>

      <%= f.label :cfp_url, "CFP URL" %>
      <%= f.url_field :cfp_url %>

      <%= f.label :begin_date, "Conference begin date" %>
      <%= f.date_field :begin_date %>

      <%= f.label :end_date, "Conference end date" %>
      <%= f.date_field :end_date %>

      <%= f.label :has_travel_funding, "Speaker travel funding provided" %>
      <%= f.check_box :has_travel_funding %>

      <%= f.label :has_lodging_funding, "Speaker lodging funding provided" %>
      <%= f.check_box :has_lodging_funding %>

      <%= f.label :has_honorariums, "Speaker honorarium provided" %>
      <%= f.check_box :has_honorariums %>

      <%= f.label :has_diversity_scholarships, "Diversity scholarships available" %>
      <%= f.check_box :has_diversity_scholarships %>

      <%= f.label :has_childcare, "Childcare provided" %>
      <%= f.check_box :has_childcare %>

      <%= f.label :code_of_conduct_url, "Code of conduct URL" %>
      <%= f.url_field :code_of_conduct_url %>

      <%= f.label :speaker_notification_deadline, "Speaker notification deadline" %>
      <%= f.date_field :speaker_notification_deadline %>

      <%= f.label :hashtag, "#Hashtag" %>
      <%= f.text_field :hashtag %>

      <%= f.label :twitter_handle, "Twitter handle" %>
      <%= f.text_field :twitter_handle, disabled: true %>

    </fieldset>

    <figure>
      <%= image_tag @conference.logo_url %>
    </figure>
  </section>

  <section class="submit">
    <%= f.submit "Create listing" %>
  </section>
<% end %>
